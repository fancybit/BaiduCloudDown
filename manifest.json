{
  "manifest_version": 3,
  "name": "百度网盘云加速下载",
  "version": "1.0",
  "description": "在右键菜单中添加'使用百度网盘云加速下载'选项",
  "permissions": ["contextMenus", "activeTab", "downloads", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup/popup.html"
  },
  "minimum_chrome_version": "88"
}